*{
	padding: 0;
	margin : 0;
}
body{
	font-size: 12px;
	font-family: 'Microsoft Yahei';
	background: #f0f0f0;
}
ul{
	list-style: none;
}
a{
	text-decoration: none;
	color: #999;
}
a:hover{
	color: #c81623;
}
img{
	cursor: pointer;
}
.left{
	float: left;
}
.right{
	float: right;
}

/*loginArea*/
#loginArea{
	z-index: 10;
	position: fixed;
	right: -270px;
	top: 0;
	height: 100%;
	overflow: hidden;
	display: none;
}
/*loginAreaLeft*/
#loginAreaLeft{
	position: relative;
	width: 100px;
	height: 100%; 
	border-right: 6px solid #7a6e6e;
}
#loginAreaLeft .iconfont{
	color: white;
}
#loginAreaLeft li{
	position: relative;
	width: 100px;
	margin-bottom: 1px;
	overflow: hidden;
	cursor: pointer;
}
#loginAreaLeft li i{
	float: left;
	font-style: normal;
	display: block;
	width: 66px;
	height: 35px;
	line-height: 35px;
	text-align: center;
	margin-bottom: 2px;
	background-color: #7a6e6e;
	position: absolute;
	right: -66px;
	background: #c81623;
	color: white;
}
#loginAreaLeft li span{	
	float: right;
	font-style: normal;
	display: block;
	width: 34px;
	height: 35px;
	line-height: 35px;
	text-align: center;
	margin-bottom: 2px;
	border-radius: 2px;
	background-color: #7a6e6e;
}
#loginAreaLeft li span:hover{
	background: #c81623;
}
#nianhuojie{
	position: absolute;
	right: -6px;
}
#login{
	position: absolute;
	width: 100px;
	right: -3px;
	top: 30%;
}
#runTop{
	position: absolute;
	right: -3px;
	bottom: -5px;
	z-index: 3;
}
/*loginAreaRight*/
#loginAreaRight{
	background: #666;
	width: 270px;
	height: 100%;
	overflow-y: auto;
}
#loginAreaRight h3{
	width: 270px;
	height: 40px;
	line-height: 40px;
	overflow: hidden;
	font-size: 18px;
	font-weight: normal;
	text-indent: 10px;
	background: #ccc;

}
#loginAreaRight .iconfont{
	color: black;
	font-size: 12px;
	cursor: pointer;
	margin-right: 30px;
	width: 20px;
	height: 20px;
	font-weight: 900;
}
#loginAreaRight .firstImg img{
	width: 100%;
	margin: 0 auto;
}
#loginAreaRight .lastImg{
	width: 228px;
	height: 77px;
	margin: 20px auto;
}
#jieriNav a{
	color: white;
	font-size: 16px;
	margin: 5px auto;
	display: block;
	width: 227px;
	height: 32px;
	line-height: 32px;
	text-align: center;
}
/*遮罩层*/
#mask{
	position: absolute;
	width: 100%;
	height: 8751px;
	z-index: 20;
	background: rgba(0 , 0 , 0 , .1);
	display: none;
}
/*loginBox*/
#loginBox{
	position: fixed;
	z-index: 21;
	top: 10px;
	left: 35%;
	width: 410px;
	height: 500px;
	border: 4px solid rgba(0 , 0 , 0 , 0.1);
	border-radius: 5px;
	background: white;
	display: none; 
}
/*loginBoxTop*/
#loginBoxTop{
	height: 30px;
	line-height: 30px;
	border: 1px solid #eee;
	background:#f3f3f3;
}
#loginBoxTop .tiShi{
	margin-left: 10px;
	font-size: 14px;
}
#loginBoxTop .iconfont{
	margin-right: 10px;
	color: #000;
	font-weight: 600;
	font-size: 12px;
}
/*loginBoxBottom*/
#loginBoxBottom{
	position: relative;
	height: 430px;
	padding: 20px;
	overflow: hidden;
}
.loginTab{
	margin: 10px auto;
	width: 346px;
	overflow: hidden;
}
.loginTab div{
	margin: 0 auto;
	float: left;
	width: 173px;
	height: 54px;
	line-height: 54px;
	text-align: center;
}
.loginTab div a{
	font-size: 18px;
}
.loginTab div .loginactive{
	font-weight: 700;
	color: #c81623; 
}
.loginTab div a:hover{
	font-weight: 700;
}
.saoMa{
	position: absolute;
	height: 168px;
	margin: 0 auto;
}
.saoMa img{
	position: absolute;
	left: 120px;
	top: 10px;
	right: 0;
}
.saoMa img:nth-of-type(2){
	display: none;
}
.zhangHu{
	position: absolute;
	left: 50px;
	display: none;
}
.zhangHu form{
	width:306px;
	height: 192px;
	margin: 0 auto; 
}
form div{
	overflow: hidden;	
	margin-bottom: 20px;
}

.zhangHu label{
	display: inline-block;
	width: 39px;
	height: 39px;
	line-height: 38px;
	text-align: center;
	border: 1px solid #ccc;
}
#free{
	width: 306px;
	height: 18px;
	line-height: 18px;
}
#free p{
	position: relative;
	width: 68px;
	height: 18px;
	overflow: hidden;
}
#free p input{
	position: absolute;
	top: 3px;
}
#free p span{
	position: absolute;
	left: 13px;
}
.zhangHu input[type="text"]{
	width: 260px;
	height: 38px;
}
.zhangHu input[type="password"]{
	width: 260px;
	height: 38px;
}
.zhangHu input[type="submit"]{
    border: 1px solid #e85356;
    display: block;
    width: 302px;
    background: #e4393c;
    height: 31px;
    line-height: 31px;
    color: #fff;
    font-size: 20px; 
    cursor: pointer;
}
